<!DOCTYPE html>
<html>
<head>
    <title>Timecard</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='assets/css/index.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='assets/font-awesome-4.7.0/css/font-awesome.min.css') }}">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
{% block body %}
{% with message = get_flashed_messages() %}
    {% if message[0] %}
        <div class="flashes" id="flash">
            <span>{{ message[0] }}</span>
        </div>
    {% endif %}
{% endwith %}
    <div class="box" id="login-box">
        <h1><a class="menu-button" href="{{ url_for('portal') }}"><i class="fa fa-home" aria-hidden="true"></i></a>{{ Employee.query.get(current_user.get_id()).fn }} {{ Employee.query.get(current_user.get_id()).ln }}<a class="menu-button" href="settings"><i class="fa fa-cog" aria-hidden="true"></i></a></h1>
        {% if current_user.is_admin() %}
        <div class="button">
            <a href="register">Register</a><br>
        </div>
        {% endif %}
        <div class="button cancel">
            <a href="logout">Logout</a>
        </div>
        <div id="timestamp" class="timestamp">Current Time:<span id="time"></span></div>
    </div>
    <script src="{{ url_for('static',filename='assets/js/load.js') }}"></script>
{% endblock %}
</body>
</html>